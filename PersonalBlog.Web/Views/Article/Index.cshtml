@model IEnumerable<PersonalBlog.Web.Models.ArticleViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="container ">
<div class="row ">
    <h1>Articles</h1>
    <hr />
    <div class="list-group col-lg-8">
        @foreach (var item in Model)
        {

            <a href="#" class="list-group-item">
               
                <h4 class="list-group-item-heading">@item.Title id:@item.ArticleId</h4>
                <p class="list-group-item-text">@item.Body</p>
                <hr style="margin-top: 20px; margin-bottom: 5px"/>
                <p class="text-muted">@item.UserName @item.Date.ToUniversalTime() </p> 
            </a>

            foreach (var comment in item.Comments)
             {
                 <div class="well">
                     @comment
                 </div>
             }

            @Html.ActionLink("Comment","CommentArticle")
        }
    </div>


   
     
