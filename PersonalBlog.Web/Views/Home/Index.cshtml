@using Microsoft.AspNet.Identity
@model PersonalBlog.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@if (!Request.IsAuthenticated)
{
    <div class="jumbotron jumbotron-billboard">
        <div class="img"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6" id="billboardText">
                    <h1>Start a blog today</h1>
                    <p>
                        Be a part of wonderful community and share your stories with others.
                    </p>
                    @Html.ActionLink("Create Account", "Register","Account", null, new{ @class = "btn btn-primary btn-lg" })
                </div>

                <div class="row">
                    <div class="col-lg-6" >
                        <form class="form-horizontal ">
                            <fieldset>                             
                                <div class="form-group">
                                    <div class="col-lg-7 col-lg-offset-5">
                                   
                                    </div>

                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


