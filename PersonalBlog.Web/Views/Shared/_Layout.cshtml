<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="padding-bottom: 0px; background-color: #F8F8FF">
    <div class="navbar navbar-inverse navbar-fixed-top" style=" box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);">
        <div class="container ">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"> </span>  Home
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Blog")">
                            <span class="glyphicon glyphicon-book" aria-hidden="true"> </span>  Blogs
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Article")">
                            <span class="glyphicon glyphicon-comment" aria-hidden="true"> </span>  Articles
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    @RenderBody()



    <footer class="panel-footer -fixed-bottom">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - PersonalBlog</p>
            <p>Made by Andrew Kobets. Contacts AndrewKobets95@gmail.com.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
