@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{


    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>

                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "LogOff", "Account", routeValues: null, htmlAttributes: new { title = "Manage(LogOff)" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><button class="btn-sm" data-toggle="modal" data-target="#myModal">MODAL</button></li>
        <li>
            <a href="@Url.Action("Login", "Account")" id="loginLink">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"> </span> Sign in
            </a>
        </li>
    </ul>
}



